/*搜索*/

.sousuo {
  display: inline-block;
  width: 91%;
  margin: 0 auto;
  margin-left: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.weui-search-bar {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 0.7);
  border: 1rpx solid #e6e6ea;
}

.weui-search-bar__input {
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 20rpx;
  top: 19rpx;
}

icon {
  vertical-align: middle;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #09bb07;
  white-space: nowrap;
}

.suo {
  width: 100%;
  height: 89rpx;
  margin-top: 20rpx;
}

