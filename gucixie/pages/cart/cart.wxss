/*外部容器*/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  
}

/*复选框样式*/

.carts-list icon {
  margin-top: 60rpx;
  margin-right: 20rpx;
  flex: 0.2;
}

/*整体列表*/

.carts-list {
  flex-direction: column;
  padding: 20rpx 40rpx;
  background: #fff;
}

/*每行单元格*/

.carts-item {
  display: flex;
  flex-direction: row;

  width: 100%;
  border-bottom: 1px solid #eee;
  padding: 30rpx 0;
}

/*左部图片*/

.carts-image {
  width: 185rpx;
  height: 185rpx;
  border-radius: 18rpx;
}

/*右上部分标题*/

.carts-title {
  display: block;
  margin: 10rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.carts-one{
  overflow: hidden; 
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  color: #ccc;
  margin-left: 10rpx;
}
/*右下部分价格与数量*/

.carts-subtitle {
  font-size: 25rpx;
  float: left;
}

/*价格*/

.carts-price {
  color: #f60;
  font-size: 32rpx;
  margin-top: 10rpx;
}

/*底部按钮*/

.carts-footer {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #eee;
  background: #eee;
  z-index: 999;
}

/*复选框*/

.carts-footer icon {
  margin-left: 20rpx;
  margin-top: 10rpx;
  color: #fff;
}

/*全选字样*/

.carts-footer text {
  font-size: 30rpx;
  margin-left: 8rpx;
  line-height: 10rpx;
}

/*立即结算按钮*/

.carts-footer .button {
  line-height: 80rpx;
  text-align: center;
  width: 220rpx;
  height: 80rpx;
  background-color: #dd2727;
  color: white;
  font-size: 36rpx;
  border-radius: 0;
  border: 0;
}

.stepper {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border: 1px solid #f2f2f2;
  height: 50rpx;
  margin-top: 22rpx;
}

.title {
  width: 200rpx;
  float: right;
}

.stepper text {
  background-color: #f2f2f2;
  width: 170rpx;
  line-height: 50rpx;
  text-align: center;
